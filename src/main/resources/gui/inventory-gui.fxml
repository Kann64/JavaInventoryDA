<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.InventoryGUIController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Inventory Management" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Load CSV" onAction="#handleLoad"/>
                <Button text="Save CSV" onAction="#handleSave"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" text="Status: Ready" style="-fx-text-fill: green;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Search:"/>
                <TextField fx:id="searchField" promptText="Search by ID or Name..." />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableView" style="-fx-padding: 10;">
            <columns>
                <TableColumn text="ID">
                    <cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Name">
                    <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Price">
                    <cellValueFactory><PropertyValueFactory property="price" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Quantity">
                    <cellValueFactory><PropertyValueFactory property="quantity" /></cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
            <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="idField" promptText="ID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="nameField" promptText="Name" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="priceField" promptText="Price" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Quantity:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="quantityField" promptText="Quantity" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4">
                <Button text="Add Product" onAction="#handleAdd"/>
                <Button text="Update Product" onAction="#handleUpdate"/>
                <Button text="Delete Product" onAction="#handleDelete"/>
                <Button text="Clear Form" onAction="#handleClearForm"/>
            </HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </GridPane>
    </bottom>
</BorderPane>

