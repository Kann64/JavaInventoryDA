<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ProductController"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <Label text="ðŸ“ Formulaire Produit" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="10" vgap="10" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 5;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="200"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="200"/>
        </columnConstraints>

        <!-- Ligne 1 -->
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Nom *:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="txtName" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <!-- Ligne 2 -->
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  GridPane.columnSpan="3" GridPane.rowSpan="2"
                  prefRowCount="3" wrapText="true"/>

        <!-- Ligne 3 -->
        <Label text="Prix *:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtPrice" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="QuantitÃ© *:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <TextField fx:id="txtQuantity" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

        <!-- Ligne 4 -->
        <Label text="Stock Minimum *:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="txtMinStock" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="SKU *:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <TextField fx:id="txtSku" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

        <!-- Ligne 5 -->
        <Label text="CatÃ©gorie *:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <ComboBox fx:id="comboCategory" prefWidth="150"/>
            <Button fx:id="btnNewCategory" text="+" style="-fx-font-weight: bold;"/>
        </HBox>

        <Label text="Fournisseur:" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
        <HBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="5">
            <ComboBox fx:id="comboSupplier" prefWidth="150"/>
            <Button fx:id="btnNewSupplier" text="+" style="-fx-font-weight: bold;"/>
        </HBox>

        <!-- Ligne 6 -->
        <Label text="Date d'expiration:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <DatePicker fx:id="dateExpiration" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Emplacement:" GridPane.columnIndex="2" GridPane.rowIndex="6"/>
        <TextField fx:id="txtLocation" GridPane.columnIndex="3" GridPane.rowIndex="6"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
        <Button fx:id="btnSave" text="ðŸ’¾ Sauvegarder"
